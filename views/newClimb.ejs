<form class="container text-center" action="/climbs" method="POST" enctype="multipart/form-data">
	<div class="form-group well">
		<label for="climbName">Name of Climb</label>
		<input class="form-control" type="text" name="climbName" placeholder="Enter name of climb" required>
	</div>

<div class="well">
	<label for="style">Style</label>
	<select class="form-control" name="style">
		<option value="oneMover">One Mover/Dyno</option>
		<option value="enduro">Enduro</option>
		<option value="crimp">Crimp</option>
		<option value="power">Power</option>
		<option value="tech">Tech</option>
	</select>
</div>

<div class="form-group well">
	<label for="grade">Grade</label>
	<select class="form-control" name="grade">
		<option value="red">Red (V4-)</option>
		<option value="blue">Blue (V5-6)</option>
		<option value="orange">Orange (V7-8)</option>
		<option value="purple">Purple (V9-V10)</option>
		<option value="black">Black (V11+)</option>
	</select>
</div>
<div class="form-group well">
	<label for="image">Climb Image</label>
	<input class="form-control btn" type="file" name="image" required>
</div>
<input hidden type="text" name="userID" value="<%=currentUser.id%>">
	<input type="submit" Value="Submit" class="btn btn-primary">
</form>
